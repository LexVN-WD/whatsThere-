model attractions {
  id            Int          @id @default(autoincrement())
  name          String       @db.VarChar(255)
  address       String       @db.VarChar(255)
  city          String?      @db.VarChar(255)
  rating        Int
  // startTime     DateTime     @default(dbgenerated("NOW() + interval '1 hour'"))
  // endTime       DateTime     @default(dbgenerated("NOW() + interval '3 hours'")) 
  startTime     String       @db.VarChar(128)
  endTime       String       @db.VarChar(128)
  list          lists        @relation(fields: [listId], references: [id])
  listId        Int
